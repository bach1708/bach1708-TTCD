<!DOCTYPE html>
<html>
<head>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/site.css" rel="stylesheet" />
    <link href="~/Content/CSS_TrangChu.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-gradient">
        <div class="container">
            <a href="@Url.Action("Index", "Home", new { area = "" })" class="navbar-brand">
                <img src="~/Content/images/napoleon_logo1.png" alt="Logo" style="width: 80px; height: 80px; display: inline-block; vertical-align: middle;" />
            </a>

            <div class="">
                <ul class="navbar-nav flex-grow-1" style="font-size:large">
                    <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Admin", "Index", "Admins", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Đặt Vé", "Index", "Bookings", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Người Dùng", "Index", "Users", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Cinemas", "Index", "Cinemas", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Movies", "Index", "Movies", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Lịch Chiếu", "Index", "Showtimes", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Thanh Toán", "Index", "Payments", new { area = "" }, new { @class = "nav-link" })</li>

                    <li>@Html.ActionLink("Sản Phẩm", "Index", "SAN_PHAM", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
            <div class="navbar navbar-expand-sm navbar-toggleable-sm ">
                <div class="container">

                    <div class="collapse navbar-collapse">
                        <ul class="navbar-nav ml-auto">
                            @if (Session["UserName"] != null)
                            {
                                <li class="nav-item">
                                    <span class="navbar-text">Chào, @Session["UserName"]</span>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Logout", "Auth")">Đăng xuất</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Login", "Auth")">Đăng nhập</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Register", "Auth")">Đăng ký</a>
                                </li>
                            }
                        </ul>
                    </div>

                </div>
            </div>
        </div>
    </nav>
    <div  class="container body-content"/>
        @RenderBody()
        <hr />

</body>


 @Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</html>
