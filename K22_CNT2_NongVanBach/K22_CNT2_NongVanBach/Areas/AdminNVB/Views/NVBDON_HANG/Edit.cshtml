@model K22_CNT2_NongVanBach.Models.DON_HANG

@{
    ViewBag.Title = "Thông Tin Đơn Hàng";
    List<K22_CNT2_NongVanBach.ModelView.DH_ChiTiet> chiTiet = ViewBag.donHangChiTiet as List<K22_CNT2_NongVanBach.ModelView.DH_ChiTiet>;

}

<h2>Thông Tin Đơn Hàng</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    @Html.HiddenFor(model => model.ID)

    <div class="form-group">
        <label class="control-label col-md-2">Mã Đơn Hàng :</label>
        <div class="col-md-10">
            <span>@Model.MaDH</span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Ngày Đặt:</label>
        <div class="col-md-10">
            <span>@Model.Ngay_dat.Value.ToString("dd/MM/yyyy")</span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Người Nhận:</label>
        <div class="col-md-10">
            <span>@Model.Ten_Nguoi_Nhan</span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Địa Chỉ Nhận:</label>
        <div class="col-md-10">
            <span>@Model.Dia_Chi_Nhan</span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Điện Thoại Nhận :</label>
        <div class="col-md-10">
            <span>@Model.Dien_Thoai_Nhan</span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Trị Giá Hóa Đơn:</label>
        <div class="col-md-10">
            <span>@Model.Tong_tien</span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Trạng Thái Háa Đơn :</label>
        <div class="col-md-10">
            <select class="form-control"name="Trang_thai">
                <option value="0" @{ if (Model.Trang_thai == 0){<text> selected </text>;}}>Chờ Xử Lý</option>
                <option value="1" @{ if (Model.Trang_thai == 1){<text> selected </text>;}}>Đang Xử Lý</option>
                <option value="2" @{ if (Model.Trang_thai == 2){<text> selected </text>;}}>Đang Hoàn Thành</option>

            </select>
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Cập Nhật" class="btn btn-success" />
        </div>
    </div>
</div>
}
<h2>Chi tiết đơn hàng đặt mua</h2>
<table class=" table table-bordered">
    <thead>
        <tr>
            <th>Mã</th>
            <th>Sản Phẩm</th>
            <th>Ảnh</th>
            <th>Giá</th>
            <th>Số Lượng</th>
            <th>Tổng Tiền</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in chiTiet)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td><img src="@Url.Content("~/Content/Image/" + item.Image)" alt="Product Image" width="300" height="150" /></td>
                <td>@item.Price</td>
                <td>@item.Qty </td>
                <td>@item.Total</td>
                
            </tr>
        }
    </tbody>
</table>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
